{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    /*Modules*/
    "module": "commonjs",
    "outDir": "build" ,
    "rootDir": "src",
    "resolveJsonModule": true,
    /*JavaScript Support*/
    "allowJs": true,
    /*Complemteness*/
    "skipLibCheck": true,
    /* Type Checking */
    "strict": true,  
  }
}